<div class="text-center">
  <div class="selected-posts">
    <h2>{{name}}</h2>
    <p>{{description}}</p>
    <p>Created by {{user.username}} on {{format_date date_created}}</p>

      <div>
            <p>Post ID: {{id}}</p>

      </div>

  </div>
  
    {{#if comments.length}}
    <h3>Current comments:</h3>
    {{#each comments as |comment|}}
    <div class="row mb-3">
      <div class="col-md-6">
        <h4>Text :{{text}}</h4>
        <h4>Created on :{{format_date date_created}}</h4>
        <h4>Created by :{{comment.user_id}}</h4>
      </div>
    </div>
    {{/each}}
    {{/if}}


  <div>
    <div class="col-md-6">
    <h2>Add Comment</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="password-signup">Comment:</label>
        <input class="form-input" type="text" id="comment"/>
      </div>
      <div class="form-group">
        <button class="btn btn-sm" id="update" data-id="{{id}}">Add Comment</button>
      </div>
    </form>
  </div>
  </div>

</div>


<script src="../js/newComment.js"></script>