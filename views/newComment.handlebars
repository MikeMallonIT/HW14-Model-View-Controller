<div class="text-center">
  <div class="selected-posts">
    <h2>{{name}}</h2>
    <p>{{description}}</p>
    <p>Created by {{user.username}} on {{format_date date_created}}</p>


    <p>
      <!--<button class="btn btn-primary">Submit Comment</button>-->
    </p> 

      <div>
            <p>Post ID: {{id}}</p>
      <!--<button class="btn btn-sm btn-primary" data-id="{{id}}">Edit Post</button>-->

      </div>

  </div>
  {{#each comment as |comment| }}

    <p>Commented by {{comment.user.username}} on {{format_date comment.date_created}}</p>


  {{/each}}

  <div>
    <div class="col-md-6">
    <h2>Add Comment</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="password-signup">Comment:</label>
        <input class="form-input" type="text" id="comment"/>
      </div>
      <div class="form-group">
        <button class="btn btn-sm" id="update" data-id="{{id}}">Add Comment</button>
      </div>
    </form>
  </div>
  </div>

</div>


<script src="../js/newComment.js"></script>