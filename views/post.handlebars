<div class="text-center">
  <div class="selected-posts">
    <h2>{{name}}</h2>
    <p>{{description}}</p>
    <p>Created by {{user.username}} on {{format_date date_created}}</p>


    <p>
      <!--<button class="btn btn-primary">Submit Comment</button>-->
    </p> 

      <div>
            <p>Post ID: {{id}}</p>
      <!--<button class="btn btn-sm btn-primary" data-id="{{id}}">Edit Post</button>-->

      </div>

  </div>

  <div>
    <div class="col-md-6">
    <h2>Edit Post</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="username-signup">Title:</label>
        <input class="form-input" type="text" value="{{name}}" id="name" />
      </div>
      <div class="form-group">
        <label for="password-signup">Content:</label>
        <input class="form-input" type="text" value="{{description}}" id="description"/>
      </div>
      <div class="form-group">
        <button class="btn btn-sm"id="update" data-id="{{id}}">Update</button>
        <button class="btn btn-sm btn-danger" id="delete" data-id="{{id}}">Delete Post</button>
      </div>
    </form>
  </div>
  </div>

</div>


<script src="../js/editPost.js"></script>